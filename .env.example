# API 서버 포트 (packages/api에서 사용)
PORT=3001

DEFAULT_SENDER_ADDRESS=your_address_here
DEFAULT_SENDER_NAME=your_name_here
DEFAULT_SENDER_PHONE=your_phone_here

# Google Sheets API 인증 파일 경로 (절대 경로 또는 상대 경로)
# 기본값: 프로젝트 루트의 credentials.json
GOOGLE_CREDENTIALS_FILE=credentials.json

# 선택 사항: 직접 JSON 내용을 환경변수로 제공 (배포 시 사용)
# GOOGLE_CREDENTIALS_JSON={"type": "service_account", ...}

# Google Sheets 스프레드시트 설정
# 우선순위: SPREADSHEET_ID > SPREADSHEET_ID_{ENV} > SPREADSHEET_NAME (이름 검색)
#
# 방법 1: 단일 시트 사용 (모든 환경에서 동일)
# SPREADSHEET_ID=your_spreadsheet_id_here
#
# 방법 2: 환경별 시트 분리 (NODE_ENV에 따라 자동 선택)
# SPREADSHEET_ID_DEV=your_dev_spreadsheet_id_here    # 개발 환경용
# SPREADSHEET_ID_PROD=your_prod_spreadsheet_id_here  # 프로덕션 환경용
#
# 방법 3: 시트 이름으로 검색 (ID 미설정 시)
# SPREADSHEET_NAME=감귤 주문서(응답)

# PostgreSQL 연결 정보 (Phase 2.1+)
DATABASE_URL=postgresql://user:password@localhost:5432/mytangerine?schema=public

# Sync Service 설정 (Phase 2.1+)
SYNC_INTERVAL="*/1 * * * *"  # cron 표현식 (기본: 1분마다)
SYNC_ENABLED=true            # 싱크 서비스 활성화 여부

# Data Source 선택 (sheets | database | hybrid)
DATA_SOURCE=sheets  # Phase 2.1에서는 sheets 유지
