# API 서버 설정
# Note: Next.js 웹 서버(3000)와 충돌하지 않도록 3001 포트 사용
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# CORS 설정
CORS_ORIGIN=*

# 기본 발송인 정보 (필수)
DEFAULT_SENDER_NAME=your_name_here
DEFAULT_SENDER_ADDRESS=your_address_here
DEFAULT_SENDER_PHONE=010-1234-5678

# Google Sheets API 인증 (아래 중 하나 필수)
# 옵션 1: 인증 파일 경로 (권장)
GOOGLE_CREDENTIALS_FILE=../../credentials.json

# 옵션 2: 인증 JSON 직접 제공 (배포 시 사용)
# GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# 옵션 3: 다른 경로 사용
# GOOGLE_CREDENTIALS_PATH=/path/to/credentials.json

# 스프레드시트 ID (선택, SPREADSHEET_NAME 대신 사용 가능)
# SPREADSHEET_ID=your_spreadsheet_id_here

# 스프레드시트 이름 (기본값: 감귤 주문서(응답))
# SPREADSHEET_NAME=감귤 주문서(응답)
